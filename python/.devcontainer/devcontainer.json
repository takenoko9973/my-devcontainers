{
    "name": "python-mamba",
    "dockerFile": "DockerFile",
    "init": true,
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/CreatedEnv/bin/python",
                "python.terminal.activateEnvironment": true,
                "[python]": {
                    "editor.formatOnPaste": true,
                    "editor.defaultFormatter": "ms-python.black-formatter",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "explicit"
                    }
                },
                "ruff.lint.args": [
                    "--select=E,W,F,B,I,N,A,UP,C4,PL,PD,NPY,C90,COM",
                    "--ignore=F401,N816,E402,B018",
                    "--line-length=120"
                ]
            },
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "KevinRose.vsc-python-indent",
                "njpwerner.autodocstring",
                "ms-python.isort",
                "ms-toolsai.jupyter",
                "VisualStudioExptTeam.vscodeintellicode",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "yzhang.markdown-all-in-one",
                "DavidAnson.vscode-markdownlint"
            ]
        }
    },
    // WSLg設定 : matplotlib表示用
    "mounts": [
        {
            "source": "/run/desktop/mnt/host/wslg/.X11-unix",
            "target": "/tmp/.X11-unix",
            "type": "bind"
        },
        {
            "source": "/run/desktop/mnt/host/wslg",
            "target": "/mnt/wslg",
            "type": "bind"
        }
    ],
    "containerEnv": {
        "DISPLAY": ":0",
        "WAYLAND_DISPLAY": "wayland-0",
        "QT_QPA_PLATFORM": "xcb",
        "XDG_RUNTIME_DIR": "/mnt/wslg/runtime-dir",
        "PULSE_SERVER": "/mnt/wslg/PulseServer"
    }
}
