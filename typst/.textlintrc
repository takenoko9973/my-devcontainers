{
    "plugins": [
        "latex2e"
    ],
    "filters": {
        "allowlist": {
            "allow": [
                "/\\${1,2}[\\s\\S]*?\\${1,2}/m",
                "/>>>.+/"
            ]
        },
        "comments": true
    },
    "rules": {
        "preset-ja-spacing": {
            "ja-space-between-half-and-full-width": {
                "space": "always"
            }
        },
        "preset-ja-technical-writing": {
            "ja-no-mixed-period": false,
            "no-exclamation-question-mark": false,
            "max-kanji-continuous-len": {
                "max": 8
            },
            "sentence-length": {
                "max": 150
            }
        },
        "spellcheck-tech-word": false,
        "prh": {
            "rulePaths": [
                ".prh/.prh.yml"
            ]
        }
    }
}
